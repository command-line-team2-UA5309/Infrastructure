[Unit]
Description=consul-template
Requires=network-online.target consul.service
After=network-online.target consul.service

[Service]
User=root
Group=root
ExecStart={{ consul_bin_dir }}/consul-template -config=/etc/nginx/sites-available/consul-template-config.hcl
KillSignal=SIGINT
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target